        $(document).ready(function () {
            $("#btn-top-up").hide();
            $(window).scroll(function () {
                if ($(window).scrollTop() > ($(document).height() / 3)) {
                    $("#btn-top-up").show();
                }
                else $("#btn-top-up").hide();
            });
            $('#btn-top-up').click(function (event) {
                var offset = $("#home").offset().top;
                //console.log(offset);
                $('html,body').animate({ scrollTop: offset }, 700);
            });
        });
    </script>

